FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

backgroundMesh
{
    xMinIn    -1.9;
    xMaxIn    1.9;
    xMinOut -5.45;
    xMaxOut  5.45;
    yMin    -0.055;
    yMax    45.8;
    zMin    0.5;
    zMax    244.5;
    zCells  1000;
    xCells  #calc "round($zCells * (($xMaxOut - $xMinOut)/($zMax - $zMin)))";
    yCells  #calc "round($zCells * (($yMax - $yMin)/($zMax - $zMin)))";
}

scale   0.001;

vertices
(
    ($:backgroundMesh.xMinIn $:backgroundMesh.yMin $:backgroundMesh.zMin) // 0
    ($:backgroundMesh.xMaxIn $:backgroundMesh.yMin $:backgroundMesh.zMin) // 1
    ($:backgroundMesh.xMaxOut $:backgroundMesh.yMax $:backgroundMesh.zMin) // 2
    ($:backgroundMesh.xMinOut $:backgroundMesh.yMax $:backgroundMesh.zMin) // 3

    ($:backgroundMesh.xMinIn $:backgroundMesh.yMin $:backgroundMesh.zMax) // 4
    ($:backgroundMesh.xMaxIn $:backgroundMesh.yMin $:backgroundMesh.zMax) // 5
    ($:backgroundMesh.xMaxOut $:backgroundMesh.yMax $:backgroundMesh.zMax) // 6
    ($:backgroundMesh.xMinOut $:backgroundMesh.yMax $:backgroundMesh.zMax) // 7
);

blocks
(
    hex (0 1 2 3 4 5 6 7)
    (
        $:backgroundMesh.xCells
        $:backgroundMesh.yCells
        $:backgroundMesh.zCells
    )
    simpleGrading (1 1 1)
);

edges
(
    arc 0 1 (0 0.02 0)
    arc 2 3 (0 46 0)
    arc 4 5 (0 0.02 245)
    arc 6 7 (0 46 245)
);

boundary
(
//  Uncomment below to define patches in background mesh
/*
    left
    {
        type patch;
        faces
        (
            (0 3 7 4)
        );
    }

    right
    {
        type patch;
        faces
        (
            (1 5 6 2)
        );
    }
*/
    inlet
    {
        type patch;
        faces
        (
            (0 1 2 3)
        );
    }

    outlet
    {
        type patch;
        faces
        (
            (4 7 6 5)
        );
    }
   /* back
    {
        type patch;
        faces
        (
            (0 4 5 1)
        );
    }

    front
    {
        type patch;
        faces
        (
            (3 2 6 7)
        );
    }
*/
);

mergePatchPairs
(
);

